                                <Setter.Value>
                                    <TranslateTransform X="0.5" Y="0.5"></TranslateTransform>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
